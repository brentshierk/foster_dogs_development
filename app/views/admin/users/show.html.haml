.row
  .col-md-6
    %h1= @user.name
.row
  .col-md-6
    %div
      %h3 Basic Info
      %div
        %span.info__label Email:
        %span.info__text= mail_to @user.email
      %div
        %span.info__label Experience:
        %span.info__text= @user.experience_list
      %div
        %span.info__label Schedule:
        %span.info__text= @user.schedule_list
      %div
        %span.info__label Submitted Application At:
        %span.info__text= @user.created_at.stamp("May 20, 1989")
      %div
        %span.info__label Address:
        %span.info__text= @user.address
      %div
        %span.info__label Lat/Long:
        %span.info__text= "#{@user.latitude}/#{@user.longitude}"
      %div
        %span.info__label Accepted Terms and Conditions:
        %span.info__text= @user.accepted_terms_at.present?
    %div
      %h3 Preferences
      %div
        %span.info__label Size Preferences:
        %span.info__text= @user.size_preference_list
      %div
        %span.info__label Activity Preferences:
        %span.info__text= @user.activity_preference_list
      %div
        %span.info__label Fostered Before?:
        %span.info__text= @user.fostered_before?
      %div
        %span.info__label Fospice?:
        %span.info__text= @user.fospice?
      %div
        %span.info__label Has other pets?:
        %span.info__text= @user.other_pets?
      %div
        %span.info__label Has children?
        %span.info__text= @user.kids?
  .col-md-6
    %div
      %h3 Email Communications
      %table.table.table-bordered.table-hover
        %thead
          %th Subject
          %th Date Contacted
          %th On Behalf Of
        - @user.email_logs.order("created_at DESC").each do |email_log|
          %tr
            %td= email_log.subject
            %td= email_log.created_at.stamp('May 20, 1989')
            %td= email_log.organization
    %div
      %h3 Admin Notes
      %table.table.table-bordered.table-hover
        %thead
          %th Note
          %th Author
          %th Date
        - @user.notes.order("created_at DESC").each do |note|
          %tr
            %td= note.note
            %td= note.author
            %td= note.created_at.stamp('May 20, 1989')

      = form_for [:admin, @user, @note] do |f|
        %div.form-group
          = f.label 'Note:'
          = f.text_area :note, class: 'form-control', required: true
        %div.form-group
          = f.label 'Author'
          = f.text_field :author, class: 'form-control', required: true
        %div
          = f.submit 'Submit'
